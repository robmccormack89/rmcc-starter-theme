{% extends "base.twig" %}

{% block content %}

  <div data-template="page-home.twig">

    <section class="uk-section uk-section-small home-hero-section">
      <div class="uk-container">
        
        {% if home_hero is not empty %}
          <div class="uk-position-relative uk-visible-toggle uk-light" uk-slider>
            <ul class="uk-slider-items uk-child-width-1-1">
              {% for post in home_hero %}
                <li>
                  <div id="post-{{post.ID}}" class="uk-height-large uk-cover-container theme-border {{ post.class }}">
                    {% if post.thumbnail %}
                      <img data-src="{{ post.thumbnail.src|resize(1138, 388) }}" alt="{{ post.thumbnail.alt }}" data-width data-height uk-cover uk-img>
                    {% else %}
                      <img data-src="https://via.placeholder.com/1138x388.png" data-width data-height uk-cover uk-img>
                    {% endif %}
                    <div class="uk-overlay uk-overlay-primary uk-position-cover uk-flex uk-flex-center uk-flex-middle uk-light uk-text-center">
                      <div>
                        <span class="uk-label home-hero-label">{{ __('Featured Article', 'rmcc-starter-theme') }}</span>
                        <h1 class="uk-margin-top uk-margin-small-bottom uk-margin-remove-adjacent uk-text-bold">{{post.title}}</h1>
                        <div class="uk-container uk-container-small">{{ post.preview.length(25).force.read_more('') }}</div>
                        <a href="{{post.link}}" class="uk-button uk-button-default uk-margin-top">{{ __('Read more', 'rmcc-starter-theme') }}</a>
                      </div>
                    </div>
                  </div>
                </li>
              {% endfor %}
            </ul>
            <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
            <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
          </div>
        {% else %}
          <div class="uk-background-muted uk-height-large uk-cover-container">
            <div class="uk-flex uk-flex-center uk-flex-middle uk-text-center uk-position-cover">
              <div>
                <h1 class="uk-text-bold"><span>{{ __('Homepage Hero Section', 'rmcc-starter-theme') }}</span></h1>
                <div class="uk-container uk-container-small">
                  <p>{{ __('No posts found. This section shows your most recent sticky post. Add a post, make it sticky & dont forget to add a featured image.', 'rmcc-starter-theme') }}</p>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      
      </div>
    </section>

    <section class="uk-section uk-section-small home-featured-section">
      <div class="uk-container">
        
        {% if home_featured is not empty %}
          <h2 class="uk-text-bold">{{ __('Featured Articles', 'rmcc-starter-theme') }}</h2>
          <div uk-slider="velocity: 5">
            <div class="uk-position-relative">
              <div class="uk-slider-container">
                <ul class="uk-slider-items uk-child-width-1-2@m uk-grid uk-grid-medium news-slide">
                  {% for post in home_featured %}
                    <li>
                      {% include 'tease-carousel.twig' %}
                    </li>
                  {% endfor %}
                </ul>
              </div>
              <div class="uk-visible@xl">
                <a class="uk-position-center-left-out uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
                <a class="uk-position-center-right-out uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
              </div>
            </div>
            <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
          </div>
        {% else %}
          <div class="uk-background-muted uk-padding">
            <h2 class="uk-text-bold"><span>{{ __('Featured Articles', 'rmcc-starter-theme') }}</span></h2>
            <p class="uk-margin-remove-bottom">{{ __('No posts found. This section shows your next 3 most recent sticky posts. Add some more posts, make them sticky & dont forget to add featured images.', 'rmcc-starter-theme') }}</p>
          </div>
        {% endif %}
      
      </div>
    </section>

    <section class="uk-section uk-section-small home-posts-section">
      <div class="uk-container">
        <div class="uk-grid-large" uk-grid>
          
          <div class="uk-article uk-width-2-3@m">
            
            {% if posts is not empty %}
              <h3 class="uk-text-bold">{{ __('More Articles', 'rmcc-starter-theme') }}</h3>
              <div class="archive-posts">
                {% for post in posts %}
                  {% include 'tease.twig' %}
                {% endfor %}
              </div>
            {% else %}
              <div class="uk-background-muted uk-padding">
                <h3 class="uk-text-bold"><span>{{ __('More Articles', 'rmcc-starter-theme') }}</span></h3>
                <p class="uk-margin-remove-bottom">{{ __('No posts found. This section shows your 4 most recent non-sticky posts. Add some more posts & add featured images.', 'rmcc-starter-theme') }}</p>
              </div>
            {% endif %}
            
            {% include 'pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}

          </div>

          {% include 'sidebar.twig' %}

        </div>
      </div>
    </section>
    
  </div>

{% endblock %}