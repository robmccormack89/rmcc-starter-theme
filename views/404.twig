{% extends "base.twig" %}
{% block content %}

<div class="uk-section" data-template="404.twig">
  <div class="uk-container">
    
    <div uk-grid>
      
      <div class="uk-width-2-3@m">
        <h4>This page or item doesnt exist</h4>
        <p>Sorry, we couldn't find what you're looking for. Trying using the search form below instead.</p>
        <div class="">
            <form class="uk-search uk-search-default uk-width-1-1 search-form" role="search" method="get" action="{{site.url}}">
                <span uk-search-icon></span>
                <input class="uk-search-input uk-border-rounded" name="s" type="search" placeholder="Search...">
            </form>
        </div>
      </div>
      
      {% include 'sidebar.twig' %}
      
    </div>
    
  </div>
</div>

{% endblock %}